{
  "name": "trail-mixx",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Executive USA",
    "email": "info@executiveusa.com",
    "url": "https://executiveusa.com"
  },
  "maintainers": [
    {
      "name": "Executive USA",
      "email": "info@executiveusa.com",
      "url": "https://executiveusa.com"
    }
  ],
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo build --cache-dir=.turbo",
    "build:cms": "turbo run build --filter=@repo/cms",
    "build:web": "turbo run build --filter=@repo/web",
    "build:stream": "turbo run build --filter=@repo/stream",
    "commit": "git-cz",
    "dev": "turbo dev --filter=@repo/web --filter=@repo/cms --filter=@repo/stream",
    "dev:cms": "turbo run dev --filter=@repo/cms",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:stream": "turbo run dev --filter=@repo/stream",
    "format": "prettier --write --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "format:check": "prettier --check --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "heroku-postbuild": "bash ./scripts/heroku/heroku-postbuild.sh",
    "lint": "turbo lint",
    "postinstall": "yarn setup:apps",
    "prepare": "husky",
    "ios": "cd apps/mobile && npx cap open ios",
    "android": "cd apps/mobile && npx cap open android",
    "start:cms": "turbo run start --filter=@repo/cms",
    "start:web": "turbo run start --filter=@repo/web",
    "setup:apps": "find . -name '*.example' -exec sh -c 'cp -n \"$1\" \"${1%.example}\"' _ {} \\;"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/typescript-config": "*",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "turbo": "^2.0.9"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": "22.x.x",
    "yarn": "1.22.x"
  },
  "comments": {
    "prettier": "bump to 3.3.3 destroys types schemas generated by Strapi (@strapi/typescript-utils > generators > utils > prettier.format())"
  }
}