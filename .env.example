# Trail Mixx Environment Variables

# Node Environment
NODE_ENV=development

# Web App (Next.js)
NEXT_PUBLIC_HLS_URL=http://localhost:3001/live/index.m3u8
APP_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_STREAM_SERVICE_URL=http://localhost:3001

# Strapi CMS
STRAPI_URL=http://localhost:1337
STRAPI_REST_READONLY_API_KEY=your-readonly-api-key-here
STRAPI_TOKEN=your-api-token-here
STRAPI_ADMIN_JWT=your-admin-jwt-secret-here

# Stream Service
HLS_ORIGIN=https://example.com/hls
FALLBACK_MP3=https://example.com/fallback.mp3

# Database (for Strapi)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trail_mixx
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false

# Optional: Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Optional: AWS S3 (for Strapi media)
AWS_ACCESS_KEY_ID=
AWS_ACCESS_SECRET=
AWS_REGION=
AWS_S3_BUCKET=
