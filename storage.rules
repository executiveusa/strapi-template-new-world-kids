rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: true;
    }

    // Allow writes (uploads, updates, deletes) only for authenticated users with an 'editor' or 'admin' role.
    // We will check the user's role from their document in Firestore.
    match /media/{fileName} {
      allow write: if request.auth != null && 
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'editor'];
    }
  }
}